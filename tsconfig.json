{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/",
    "./dist/"
  ]
}